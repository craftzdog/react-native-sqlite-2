{
  "name": "react-native-sqlite-2",
  "version": "3.5.2",
  "description": "SQLite3 Native Plugin for React Native for iOS, Android, Windows and macOS",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "react-native-sqlite-2.podspec",
    "!lib/typescript/example",
    "!android/build",
    "!ios/build",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepare": "bob build && husky install",
    "release": "release-it",
    "example": "yarn --cwd example",
    "pods": "cd example && pod-install --quiet",
    "bootstrap": "yarn example && yarn && yarn pods"
  },
  "keywords": [
    "react-native",
    "ios",
    "android",
    "pouchdb",
    "sqlite"
  ],
  "repository": "https://github.com/craftzdog/react-native-sqlite-2",
  "author": "Takuya Matsuyama <hi@craftz.dog> (https://github.com/craftzdog)",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/craftzdog/react-native-sqlite-2/issues"
  },
  "homepage": "https://github.com/craftzdog/react-native-sqlite-2#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "lodash.map": "^4.6.0",
    "lodash.zipobject": "^4.1.3",
    "websql": "^2.0.3"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^16.0.0",
    "@release-it/conventional-changelog": "^4.1.0",
    "@types/jest": "^27.0.3",
    "@types/lodash.map": "^4.6.13",
    "@types/lodash.zipobject": "^4.1.6",
    "@types/react": "^17.0.37",
    "@types/react-native": "0.66.15",
    "@types/websql": "^0.0.27",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "commitlint": "^11.0.0",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.0",
    "jest": "^27.4.3",
    "pod-install": "^0.1.0",
    "prettier": "^2.4.1",
    "react": "17.0.2",
    "react-native": "0.67.1",
    "react-native-builder-bob": "^0.18.0",
    "release-it": "^14.2.2",
    "typescript": "^4.5.2"
  },
  "peerDependencies": {
    "react-native": ">= 0.60.0"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ],
    "extends": [
      "prettier"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "no-unused-vars": "off",
      "no-shadow": "off",
      "@typescript-eslint/no-shadow": 1,
      "no-undef": "off"
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
